
html, body
	height 100%


.layout
	m-cf()
	&__sidebar
		width 300px
		+below($content-width)
			display none

	&__content
		width 830px
		+below($content-width)
			width auto
			m-padding()

	&_sidebar_left &__sidebar
		float left

	&_sidebar_left &__content
		float right
		+below($content-width)
			float none

	&_sidebar_right &__sidebar
		float right

	&_sidebar_right &__content
		float left
		+below($content-width)
			float none


.video-widget
	position relative
	display block
	height 0
	padding 0
	overflow hidden

	&_responsive
		iframe
		embed
		object
		video
			position absolute
			top 0
			bottom 0
			left 0
			width 100%
			height 100%
			border 0

	&_16x9
		padding-bottom 56.25%

	&_4x3
		padding-bottom 75%
