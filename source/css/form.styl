@import './lib/mixins'



.b-form
	&__section
		padding-bottom 10px

		&_button
			padding-left 127px

			& .b-button 
				margin-right 15px

	&__drop-loader
		padding-bottom 17px


	& .for-input
		// float left
		// width 425px
		// margin-right 10px

	& label
		font-size $form-label-font-size 
		font-family $form-label-font-family
		color $form-label-font-color
		display block
		margin-top 1px
		padding-bottom 5px
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		cursor pointer


		&.required
			& span
				color $form-input-error-color

	& input
	& textarea
		width 100%
		box-sizing border-box
		font-family $form-base-font-family
		font-size $form-input-font-size
		color $form-input-font-color
		background transparent
		border none
		border-radius $form-input-border-radius
		overflow hidden
		background-color $form-input-bg-color

	
		&:focus
			color $form-input-focus-text-color
	& select
		width 100%	

	& .item
		padding-bottom $form-item-padding

		& .text
			// width 390px
			// width $form-input-width + 2px
			// height $form-input-height + 2px
			
			& input
				border 1px solid $form-input-border-color
				padding 0 10px
				// width 368px
				// width $form-input-width - 20px
				height $form-input-height
				line-height $form-input-height

				&:focus
					box-shadow 0 0 5px $form-input-focus-color
					border-color $form-input-focus-color
		
		& .textarea
			// border-radius 3px

			& textarea
				border 1px solid $form-input-border-color 
				padding 10px
				resize vertical
				height 80px
				min-height 80px
				// width 655px

				&:focus
					box-shadow 0 0 5px $form-input-focus-color
					border-color $form-input-focus-color

		& .jq-selectbox__select
			// width $form-input-width
		
		& .text-mini
			& input
				float left
				width $form-input-width - $form-captcha-width - 10px
				padding 0 10px
				line-height $form-input-height
				height $form-input-height
				border 1px solid $form-input-border-color

				&:focus
					box-shadow 0 0 5px $form-input-focus-color
					border-color $form-input-focus-color

		& .captcha-refresh
			float left
			display block
			width $form-captcha-width
			height $form-input-height
			margin-right 10px


		&_error
			& label
				color $form-input-error-color	

			& .text
				& input
					border 1px solid $form-input-error-color !important

					&:focus
						box-shadow 0 0 5px rgba($form-input-error-color, 0.75) !important
	
		& .errors
			// float left
			// max-width 290px
			float none
			clear both
			margin-left 127px
			& li
				padding 2px 0
				background none
				font-size 11px
				line-height 12px
				color $form-input-error-color

		& .hint
			// max-width 290px
			float none
			clear both
			margin-left 127px
			padding 2px 0 0 0
			float left
			font-size 11px
			line-height 12px
			color $form-input-hint-font-color

	& .checkbox label
	& .radio label
		font-size 13px
		color #000
		

	&_two-coll label
		width 120px
		padding-right 7px
		float left
	
	&_two-coll .for-input
		float left
		width $form-input-width
		margin-right 10px

	&_small label
		color #bbbbbb
		display inline-block
		padding-right 8px

		*:first-child+html &
			float left
	
	&_small .item
		padding-bottom 0
		
	&_small .item .text input
	&_small .jq-selectbox__select
		padding 0 5px
		height 23px
		line-height 21px
		font-size 11px
		color #2f2f27
		border-radius 2px

	&_small .item .text input
		width 56px
	
	&_small .jq-selectbox
		width 126px
	
	&_small .jq-selectbox__trigger
		width 16px
		
	&_small .jq-selectbox__trigger-arrow
		top 9px
		right 4px
		background url(../img/form_small_arrow.gif) 0 0 no-repeat

	&_small .jq-selectbox__dropdown
		top 23px
		
	&_small .jq-selectbox li
		font-size 11px
		color #2f2f27
		padding 3px 6px 4px

.b-form-message
	font-size 16px
	padding-bottom 20px

	&_success
		color $form-input-success-color

	&_error
		color $form-input-error-color

.b-input-group
	&__label
		padding-bottom 8px !important
	
	&__body
		width 800px
		float left

		& label
			width auto

	& .item
		padding-bottom 11px

	& label
		//

	& .jq-checkbox
	& .jq-radio
		float left
		margin 0px 8px 0 0

.b-select-mini
	padding-bottom 17px
	&__select
		width 182px
		float left
		padding-right 22px
		
		& .item
			padding-bottom 0

		& .jq-selectbox__select
			width 135px !important

	&__hint
		float left
		width 207px
		font-size 11px
		color #919191
		line-height 13px


