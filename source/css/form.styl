	text-shadow 1px 1px #FFF
	font-size 14px
	cursor pointer

	&:hover
		background-color #E6E6E6
		background-position 0 -10px

	&:active
		background #F5F5F5
		box-shadow inset 1px 1px 3px #DDD

	&::-moz-focus-inner
		padding 0
		border 0

button.styler:after
	content ''
