@import './lib/mixins'


//- Сброс стилей
//- Жесткий ресет
hard-reset()

//- Альтернатива ресету
//- http://necolas.github.io/normalize.css/
//- normalize()

//- Старая версия сброса от Эрика Мейера (Eric A. Meyer), для html 4, xhtml
//- http://meyerweb.com/eric/tools/css/reset/reset200802.css
//- meyer-reset()

//- Последняя версия сброса от Эрика Мейера (Eric A. Meyer), поддерживает теги html5
//- http://meyerweb.com/eric/tools/css/reset/
//- meyer-html5()


.clear
	clear both
	width 0
	height 0
	padding 0

.last
	margin-right 0 !important
	padding-right 0 !important

.first
	padding-left 0 !important
	margin-left 0 !important

.rel
	position relative

.no-border
	&
	td
	th
		border none

.no-padding
	&
	td
	th
		padding 0

.img-repl
	text-indent -9999px
	overflow hidden
	display block


 // Поиск 
.highlight
	background-color #FFF090

// Костыли для блока с контентом
.b-content-wrapper
	& img
		position relative
		padding 1px
		// box-shadow inset 1px 5px 0 0 white, inset -1px -1px 0 0 white
		border 1px solid #e8e8e8
		// width 100%
		margin 5px 0 21px 0

	& img[style~="float:left"]
	& img[style~="float: left"]
		margin 7px 17px 15px 0

	& img[style~="float:right"]
	& img[style~="float: right"]
		margin 7px 0 15px 17px

	& table tr:nth-child(even) td
		background-color #eaf7ff


	& ul
	& ol
		padding-bottom 15px

		& ul
		& ol
			padding-bottom 0


body
html
	font-family $font-family-base
	color $base-text-color
	font-size $font-size-base

body
	background-color $base-bg


// Заголовки 
h1, h2, h3, h4, h5, h6
.h1, .h2, .h3, .h4, .h5, .h6
	font-family $headings-font-family
	font-weight $headings-font-weight 
	color $headings-color
	line-height $headings-line-height
	padding 20px 0 8px

	
h1, .h1
	font-size 26px

h2, .h2
	font-size 24px

h3, .h3
	font-size 24px

h4, .h4
	font-size 20px

h5, .h5
	font-size 18px

h6, .h6
	font-size 16px




 // Текстовые элементы 
p
	font-size $font-size-base
	color $base-text-color
	padding 0 0 18px 0
	line-height $line-height-base

a
a:visited
	transition color 0.2s ease 0s
	color $link-color
	text-decoration underline

a:hover
	color $link-hover-color
	text-decoration none

pre
code
	color BaseTextColor
	font-size BaseFontSize
	overflow hidden
	white-space pre-wrap
	white-space -moz-pre-wrap
	white-space -pre-wrap
	white-space -o-pre-wrap
	word-wrap break-word
	font-family consolas

q
	quotes "«" "»"
	font-style italic

	q
		quotes "„" "“"
		font-style italic

blockquote
	// text-align center
	padding 0 11px 0 11px
	font-family times
	// background #00ad1f
	// border-radius 5px
	margin 4px 0 21px 0
	color #0080dd
	// font-weight bold
	// font-style oblique
	line-height 29px
	font-size 25px
	border-left 5px solid #007cd9

	p
		font-size 23px
		color #0080dd
		// font-size BaseFontSize
		// color BaseTextColor
		padding 10px 0
		// line-height 18px
		line-height 28px
		

abbr
	border-bottom thin dashed
	cursor help
	font-style italic	

i
	font-style oblique



 // Таблицы 
table
	// border-top 1px solid BorderColor
	// border-left 1px solid BorderColor
	border-collapse collapse
	margin 0 0 24px 0
	width 100%

	caption
		padding-bottom 10px
		padding-top 18px
		font-size 16px
		color #3a3a3a
		font-weight bold
		text-align left

th
	text-align left
	padding 7px
	font-size HeaderFontSize
	font-weight normal
	color BaseHeadingColor
	font-weight bold
	// height 19px
	// border-right 1px solid BorderColor
	border-bottom 1px solid BorderColor
	line-height 18px

	&:first-child
		padding-left 0

td
	padding 7px
	font-size BaseTableFontSize
	color black
	border-bottom 1px solid BorderColor
	// border-right 1px solid BorderColor
	// border-bottom 1px solid BorderColor

	&:first-child
		padding-left 0

.b-text-wrapper
	tr:hover
		td
			background-color #ebebeb

img
	border 0

hr
	background BorderColor
	height 1px


 // Списки 
.bullet
	padding-bottom 12px
dt
	color BaseHeadingColor
	font-size BaseFontSize
	font-weight 600

dd
	padding 0 10px 15px
	font-size BaseFontSize
	font-style italic
	padding-top 10px
	color BaseTextColor

ul 
	li
		list-style none
		padding 0 0 2px 41px
		font-size BaseListFontSize
		background-image url('../img/list-marker.gif')
		background-position 14px 0.90em
		background-repeat no-repeat
		color BaseTextColor

		ul 
			li
				padding-bottom 0
				padding-top 2px
				background-position 14px 12px
				background-repeat no-repeat

ol
	list-style-image:none
	list-style-position:outside
	list-style-type:none

	li
		padding 0 0 6px 0
		font-size BaseListFontSize
		list-style: decimal inside
		color BaseTextColor

		ol 
			li
				padding 6px 0 0 25px