.avatar
	display inline-block
	position relative
	background-color #2d3e60
	color #fff
	overflow hidden

	&__initials
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		user-select none

	&__image
		display block
		width 100%
		height 100%

	&_style_circle
		border-radius 30em

	&_size_normal
		size 80px
		font-size 2em

	&_size_extra-large
		size 120px
		font-size 3em

	&_size_large
		size 100px
		font-size 2.5em

	&_size_small
		size 60px
		font-size 1.5em

	&_size_extra-small
		size 40px
		font-size 0.75em

