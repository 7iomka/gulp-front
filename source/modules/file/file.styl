focus(color)
	border-color color
	box-shadow 0 0 3px 1px rgba(color, 0.45)

.file
	position relative
	width 100%
	display block
	box-sizing border-box

	&__control
		position absolute
		z-index 1
		margin 0
		padding 0
		opacity 0
		width 100%
		height 100%
		outline none
		box-sizing border-box

		&:focus ~ .file__button
			border-color #3498da
			outline none
			focus(#3498da)

	&__button
		display inline-block
		vertical-align middle
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		cursor pointer
		width 100%
		border-width 1px
		border-style solid
		border-color transparent
		border-radius 3px
		user-select-none()
		&:before
			content attr(data-button-text)
			display inline-block
			vertical-align middle

	&_style_default &__button
		background-color #fff
		color #333

		&:before
			position relative
			margin-right 20px
			padding 7px 18px
			transition 125ms all ease-in-out
			color #fff
			border-radius 3px
			background #3498da
			font-size 13px
