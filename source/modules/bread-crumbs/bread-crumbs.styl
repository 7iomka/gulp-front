.bread-crumbs
	line-height normal
	ul-reset()

	&__item
	&__separator
		display inline-block
		vertical-align middle

	&__item
		list-style none
		padding 0
		font-size 14px
		color #111

	&__link
		&
		&:visited
			text-decoration none

		&:hover
			text-decoration underline

	&__separator
		color #333
		font-size 8px
		padding 0 5px 0 8px
		svg
			size 5px 10px
			fill #666
