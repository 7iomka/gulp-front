.accordion
	ul-reset()

	&__item
		padding 0
		list-style none
		margin-bottom -1px

	&__header
		position relative
		color #333
		font-size 13px
		padding 10px 50px 10px 20px
		background-color #fff
		transition 150ms all ease-in-out 0s
		border 1px solid #cdcdcd
		border-radius 3px
		cursor pointer
		&:hover
			background-color #F9F9F9

		&:after
			transition 150ms all ease-in-out 0s
			position absolute
			right 20px
			top 50%
			margin-top -4px
			content ''
			display block
			size 6px
			border-width 0 1px 1px 0
			border-color #535353
			border-style solid
			transform rotate(45deg)
			transform-origin 50% 75%

	&__content
		display none
		padding 20px 10px

	&__item_active &__header
		background-color #F9F9F9

	&__item_active &__header:after
		transform rotate(225deg)
